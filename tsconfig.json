{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "lib": ["es6", "es5"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "test"],
  "compileOnSave": false
}
